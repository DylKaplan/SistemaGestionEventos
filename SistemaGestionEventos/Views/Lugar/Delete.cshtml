@model SistemaGestionEventos.Models.Lugar

@{
    ViewData["Title"] = "Eliminar";
}

<h1>Eliminar Lugar</h1>

<h3>Está seguro que quiere eliminar el lugar?</h3>
<div>
    <hr />
    <dl class="row details">
        <div class="item-detalle">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nombre)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nombre)
            </dd>
        </div>
        <div class="item-detalle">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Direccion)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Direccion)
            </dd>
        </div>
        <div class="item-detalle">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.tieneEscaleras)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.tieneEscaleras)
            </dd>
        </div>
    </dl>
    
    <form class="btn-detail" asp-action="Delete">
        <input type="hidden" asp-for="IdLugar" />
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        <a class="btn btn-secondary" asp-action="Index">Volver</a>
    </form>
</div>
