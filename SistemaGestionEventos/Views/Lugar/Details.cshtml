@model SistemaGestionEventos.Models.Lugar

@{
    ViewData["Title"] = "Detalle";
}

<h1>Detalle del Lugar</h1>

<div>
    <hr />
    <dl class="row details">
        <div class="item-detalle">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Nombre)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Nombre)
            </dd>
        </div>
        <div class="item-detalle">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Direccion)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Direccion)
            </dd>
        </div>
        <div class="item-detalle">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.tieneEscaleras)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.tieneEscaleras)
            </dd>
        </div>
    </dl>
</div>
<div class="btn-detail">
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.IdLugar">Editar</a>
    <a class="btn btn-secondary" asp-action="Index">Volver</a>
</div>
