@model IEnumerable<SistemaGestionEventos.Models.Personal>

@{
    ViewData["Title"] = "Listado";
}

<div class="div-index">
    <h1>Lista del Personal</h1>
    <p>
        <a class="link-table" asp-action="Create">Crear Personal</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Apellido)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Telefono)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EsPersonalTecnico)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EsPersonalFlete)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Especializacion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Patente)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TamanioFlete)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Apellido)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telefono)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EsPersonalTecnico)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EsPersonalFlete)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Especializacion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Patente)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TamanioFlete)
                    </td>
                    <td>
                            <a class="link-table" asp-action="Edit" asp-route-id="@item.IdPersonal">Editar</a> |
                            <a class="link-table" asp-action="Details" asp-route-id="@item.IdPersonal">Detalle</a> |
                            <a class="link-table" asp-action="Delete" asp-route-id="@item.IdPersonal">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
